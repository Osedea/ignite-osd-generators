import RequestHandler from '<%= props.appName %>/app/helpers/requestHandler';
import <%= props.name %>Service from './reducer';

const { actions: { got<%= props.name %>s, get<%= props.name %>sFailed } } = <%= props.name %>Service;

/**
 * GET <%= props.name %>
 */
export const get<%= props.name %> = () => (dispatch: Dispatch) => {
    RequestHandler.requestAPI(`/<%= props.name.toLowerCase() %>`)
        .then((data) => {
            dispatch(got<%= props.name %>s(data));
        })
        .catch((response) => {
            dispatch(get<%= props.name %>sFailed(response.message));
        });
};
